# Favorite queries.
[favorite_queries]
gr-info = "SELECT MEMBER_ID, MEMBER_HOST, MEMBER_STATE, MEMBER_ROLE, MEMBER_VERSION FROM performance_schema.replication_group_members ORDER BY MEMBER_HOST;"
clone-progress = "SELECT STAGE, STATE, END_TIME FROM performance_schema.clone_progress;"
clone-status = SELECT STATE FROM performance_schema.clone_status;
proxysql-runtime-servers = "SELECT hostgroup_id,hostname,status FROM runtime_mysql_servers ORDER BY hostname;"
proxysql-persist-users = "LOAD MYSQL USERS TO RUNTIME; SAVE MYSQL USERS TO DISK;"
proxysql-persist-servers = "LOAD MYSQL SERVERS TO RUNTIME; SAVE MYSQL SERVERS TO DISK;"
proxysql-persist-rules = "LOAD MYSQL QUERY RULES TO RUNTIME; SAVE MYSQL QUERY RULES TO DISK;"
proxysql-persist-vars = "LOAD MYSQL VARIABLES TO RUNTIME; SAVE MYSQL VARIABLES TO DISK;"
proxysql-persist-admin-vars = "LOAD ADMIN VARIABLES TO RUNTIME; SAVE ADMIN VARIABLES TO DISK;"
proxysql-maintain-server = "UPDATE mysql_servers SET status='OFFLINE_SOFT' WHERE hostname='$1'; LOAD MYSQL SERVERS TO RUNTIME; SAVE MYSQL SERVERS TO DISK;"
proxysql-online-server = "UPDATE mysql_servers SET status='ONLINE' WHERE hostname='$1'; LOAD MYSQL SERVERS TO RUNTIME; SAVE MYSQL SERVERS TO DISK;"
proxysql-delete-server = "DELETE FROM mysql_servers WHERE hostname='$1'; LOAD MYSQL SERVERS TO RUNTIME; SAVE MYSQL SERVERS TO DISK;"
proxysql-stats-conn = "SELECT hostgroup hg, srv_host, status, ConnUsed, ConnFree, ConnOK, ConnERR, MaxConnUsed FROM stats_mysql_connection_pool;"
proxysql-stats-users = "SELECT * FROM stats_mysql_users;"
proxysql-stats-processlist = "SELECT user, db, cli_host, cli_port, hostgroup, command, time_ms, info FROM stats_mysql_processlist;"
proxysql-stats-rules = "SELECT * FROM stats_mysql_query_rules;"

